<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.RiwayatFragment">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:background="#1A3C63">


        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="381dp"
            android:layout_height="183dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_card_maintop"
            android:padding="20dp">


            <LinearLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="User Profile Icon"
                    android:src="@drawable/account_circle" />

                <LinearLayout
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat datang"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adi Nugroho"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="Settings Icon"
                    app:srcCompat="@drawable/settings" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userInfoLayout"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="2dp"
                android:text="Selamat datang\nhati-hati ya... Soalnya aplikasi ini bisa bikin kamu nyaman dan susah move on~"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contentCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerLayout"
            android:layout_marginTop="41dp"
            android:background="@drawable/bg_card_top"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="60dp"/>


        <LinearLayout
            android:id="@+id/navButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/contentCard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="false"
            android:clipChildren="false">

            <Button
                android:id="@+id/btnBeranda"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:elevation="8dp"
                android:backgroundTint="#B3CFE5"
                android:textColor="#1A3C63"
                android:text="Beranda"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:backgroundTint="#1A3C63"
                android:text="Riwayat"
                android:textColor="@android:color/white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnEdukasi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:backgroundTint="#B3CFE5"
                android:text="Edukasi"
                android:textColor="#1A3C63"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/navButtons"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:padding="8dp"/>


    </RelativeLayout>
</FrameLayout>